<Page x:Class="TechnicalShop.Pages.AuthorizatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TechnicalShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizatePage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Администратору необходимо ввести пароль</TextBlock>
            <PasswordBox x:Name="PasswordPb"  Margin="5" Height="30"></PasswordBox>
            <Button x:Name="EnterBtn" Click="EnterBtn_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
